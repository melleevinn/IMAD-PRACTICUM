<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"


    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:padding="16dp">
    @android.annotation.SuppressLint("ExtraText")

    <EditText
        android:id="@+id/monday_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/monday"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <EditText
        android:id="@+id/tuesday_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/tuesday"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <EditText
        android:id="@+id/wednesday_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/wednesday"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <EditText
        android:id="@+id/thursday_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/thursday"
        android:inputType="numberDecimal"
        android:autofillHints="" />

    <EditText
        android:id="@+id/friday_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/friday"
        android:inputType="numberDecimal"
        android:autofillHints="friday" />

    <EditText
        android:id="@+id/saturday_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/saturday"
        android:inputType="numberDecimal"
        android:autofillHints="saturday" />

    <EditText
        android:id="@+id/sunday_temp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="0"
        android:hint="@string/sunday"
        android:inputType="numberDecimal" />

    <Button
        android:id="@+id/clear_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/clear" />

    <Button
        android:id="@+id/calculate_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/calculate_average" />


    <Button
        android:id="@+id/detailed_view_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/detailed_view" />

    <Button
        android:id="@+id/exit_button"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/exit" />

    <TextView
        android:id="@+id/average_temperature_textview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:textSize="24sp" />
